{
  "schemaVersion": 1,
  "id": "blue-archive-halo",
  "version": "${version}",
  "name": "Blue Archive Halo",
  "description": "仿碧蓝档案光环。支持多数光影，安装modmenu以进入配置页面",
  "authors": [
    "2894638479"
  ],
  "contact": {
    "homepage": "https://www.mcmod.cn/class/21385.html",
    "sources": "https://github.com/2894638479/fabric-blue-archive-halo",
    "issues": "https://github.com/2894638479/fabric-blue-archive-halo/issues"
  },
  "license": "MIT",
  "icon": "assets/blue-archive-halo/icon.png",
  "environment": "client",
  "entrypoints": {
    "client": [
      {
        "value": "name.bluearchivehalo.fabric.BlueArchiveHaloClientFabric",
        "adapter": "kotlin"
      }
    ],
    "modmenu": [
      {
        "value": "name.bluearchivehalo.fabric.BlueArchiveHaloModMenu",
        "adapter": "kotlin"
      }
    ]
  },
  "mixins": [
    "blue-archive-halo-client.mixin.json"
  ],
  "accessWidener": "bahalo.accesswidener",
  "depends": {
    "fabricloader": ">=0.16.14",
    "minecraft": "~1.20.1",
    "java": ">=17",
    "fabric-api": "*",
    "fabric-language-kotlin": ">=1.13.3+kotlin.2.1.21"
  },
  "suggests": {
    "modmenu": "*",
    "bigbeacons": "*",
    "better_beacons": "*"
  }
}